# Environment variables for Unified Signal Monitoring Platform

# Data directories (optional, defaults shown)
DATA_ROOT=./data
RAW_PRICES_DIR=./data/raw/prices_stooq
RAW_FUNDAMENTALS_DIR=./data/raw/fundamentals_sec
CURATED_DIR=./data/curated
MARTS_DIR=./data/marts

# SEC EDGAR configuration (REQUIRED for fundamentals ingestion)
SEC_EDGAR_USER_AGENT="YourName your.email@example.com"
SEC_EDGAR_USER_EMAIL=your.email@example.com
SEC_EDGAR_COMPANY_NAME=MosaicSignalPlatform

# GCS Configuration (for Cloud Run deployment)
GCS_BUCKET_NAME=your-bucket-name
GCS_ENABLED=false
GCS_MARTS_PREFIX=marts/

# Logging
LOG_LEVEL=INFO

# Optional: Alpha Vantage API key (if using Alpha Vantage data source)
# ALPHAVANTAGE_API_KEY=your-api-key

# Optional: Pipeline token (for API security, if using pipeline endpoint)
# PIPELINE_TOKEN=your-secret-token

# Optional: Dash debug mode
DASH_DEBUG=false
